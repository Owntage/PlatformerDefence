<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.owntage.es2.EndOfLevel"
    android:orientation="vertical">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:baselineAligned="false"
        android:clickable="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/score"
            android:textSize="90dp"
            android:id="@+id/result"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_red_light"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/vk"
                android:onClick="onClickVK"
                android:background="@drawable/selector_for_vk"
                android:text="VK"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/repeat"
                android:onClick="onClickRepeate"
                android:background="@drawable/selector_for_repeat"
                android:text="Repeate"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/next"
                android:onClick="onClickNext"
                android:background="@drawable/selector_for_next"
                android:text="Next"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/menu"
                android:onClick="onClickMenu"
                android:background="@drawable/selector_for_menu"
                android:text="Menu"
                android:textColor="@color/selector_for_menu" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
